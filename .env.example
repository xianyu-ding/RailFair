# National Rail Data Portal APIs Configuration

# Historical Service Performance (HSP) API
HSP_SERVICE_DETAILS_URL=https://hsp-prod.rockshore.net/api/v1/serviceDetails
HSP_SERVICE_METRICS_URL=https://hsp-prod.rockshore.net/api/v1/serviceMetrics
HSP_USERNAME=your_username_here
HSP_PASSWORD=your_password_here

# Darwin Push Port (Real-time Train Data)
DARWIN_USERNAME=your_darwin_username
DARWIN_PASSWORD=your_darwin_password
DARWIN_MESSAGING_HOST=darwin-dist-44ae45.nationalrail.co.uk
DARWIN_STOMP_PORT=61613
DARWIN_OPENWIRE_PORT=61616
DARWIN_LIVE_FEED_TOPIC=/topic/darwin.pushport-v16
DARWIN_STATUS_TOPIC=/topic/darwin.status

# Darwin S3 (Historical Data)
DARWIN_S3_BUCKET=your_bucket_name
DARWIN_S3_PREFIX=your_prefix
DARWIN_AWS_ACCESS_KEY=your_access_key
DARWIN_AWS_SECRET_KEY=your_secret_key
DARWIN_AWS_REGION=eu-west-1

# Darwin FTP (Alternative Access)
DARWIN_FTP_HOST=datafeeds.nationalrail.co.uk
DARWIN_FTP_USERNAME=your_ftp_username
DARWIN_FTP_PASSWORD=your_ftp_password
DARWIN_FTP_PUSHPORT_DIR=/pushport
DARWIN_FTP_SNAPSHOT_DIR=/snapshot

# Knowledgebase API
KB_API_BASE_URL=https://api.rsp.nationalrail.co.uk
KB_USERNAME=your_kb_username
KB_PASSWORD=your_kb_password

# Knowledgebase Real-time Incidents
KB_INCIDENTS_MESSAGING_HOST=datafeeds.nationalrail.co.uk
KB_INCIDENTS_TOPIC=/topic/kb.incidents
KB_INCIDENTS_STOMP_PORT=61613
KB_INCIDENTS_OPENWIRE_PORT=61616

# Weather API (OpenWeatherMap example)
WEATHER_API_KEY=your_weather_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rail_delay_db
DB_USER=postgres
DB_PASSWORD=your_db_password

# Application Settings
LOG_LEVEL=INFO
DATA_RETENTION_DAYS=90
CACHE_EXPIRY_HOURS=24
